{
  // No configurationProvider, no compileCommands. We'll drive cpptools directly.
  "C_Cpp.errorSquiggles": "disabled", // Disable error squiggles
  //"C_Cpp.errorSquiggles": "enabledIfIncludesResolve",

  // Friendly MSYS2 terminal env (unchanged)
  "terminal.integrated.env.windows": {
    "MSYSTEM": "MINGW64",
    "CHERE_INVOKING": "1"
  },

    "C_Cpp.default.forcedInclude": [
    "${workspaceFolder}/src/plugin.hpp"
  ],

  // (Optional) lightweight file associations
  "files.associations": {
    "cmath": "cpp",
    "any": "cpp",
    "array": "cpp",
    "vector": "cpp",
    "string": "cpp",
    "memory": "cpp",
    "algorithm": "cpp",
    "optional": "cpp",
    "tuple": "cpp",
    "utility": "cpp",
    "format": "cpp",
    "string_view": "cpp",
    "numbers": "cpp",
    "stop_token": "cpp"
  }
}